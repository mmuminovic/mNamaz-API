# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# Security
CORS_ORIGIN=*
HELMET_ENABLED=true

# i18n Configuration
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,bs,tr,al,de,es,fr,id,ru,ur

# Media Storage
MEDIA_BASE_URL=http://localhost:3000/api/v1/media
ENABLE_CDN=false
CDN_URL=

# Cache Configuration
CACHE_TTL=3600